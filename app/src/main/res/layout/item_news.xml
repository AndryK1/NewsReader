<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/news_item_bg"
    android:layout_margin="10dp"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/posterLayout"
        android:layout_width="158dp"
        android:layout_height="104dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/news_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/material_dynamic_neutral40"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/news_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        android:text="teeeeeeessssssssssssssssssssssssssssssssssssssssst"
        android:textColor="@color/commonWhiteText"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_heavy"
        android:textSize="@dimen/heavy_text_size"
        app:layout_constraintStart_toEndOf="@id/posterLayout"
        app:layout_constraintTop_toTopOf="@id/posterLayout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/news_bottom_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_news"
        app:layout_constraintStart_toStartOf="@id/posterLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/posterLayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="18sp"
        android:text="test"
        android:textColor="@color/muted_bg"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/news_bottom_icon"
        app:layout_constraintBottom_toBottomOf="@id/news_bottom_icon"
        />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_dot_13"
        app:layout_constraintStart_toEndOf="@id/publisher"
        app:layout_constraintBottom_toBottomOf="@id/publisher"
        app:layout_constraintTop_toTopOf="@id/publisher"/>

    <TextView
        android:id="@+id/published_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/muted_bg"
        android:fontFamily="@font/ys_display_medium"
        app:layout_constraintStart_toEndOf="@id/dot"
        app:layout_constraintBottom_toBottomOf="@id/news_bottom_icon"
        android:textSize="18sp"
        android:text="1 час"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>